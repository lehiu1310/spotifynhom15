const songs = [
  {
    title: "Top Hits",
    description: "Những bản nhạc đang hot",
    image: "https://i.scdn.co/image/ab67616d00001e0278f586c8ad15bdfc906a86a8"
  },
  {
    title: "Lofi Chill",
    description: "Thư giãn nhẹ nhàng",
    image: "https://i.scdn.co/image/ab67616d00001e021f1b5c47b5889274e02df4b7"
  },
  {
    title: "Workout",
    description: "Tập luyện bùng nổ",
    image: "https://i.scdn.co/image/ab67616d00001e02e5b6c07b6714e181fe3ec0df"
  }
];

const playlistEl = document.getElementById('playlist');
const nowPlayingEl = document.getElementById('now-playing');

songs.forEach(song => {
  const card = document.createElement('div');
  card.classList.add('card');

  card.innerHTML = `
    <img src="${song.image}" alt="${song.title}" />
    <h3>${song.title}</h3>
    <p>${song.description}</p>
  `;

  card.addEventListener('click', () => {
    nowPlayingEl.textContent = `🎵 Đang phát: ${song.title}`;
  });

  playlistEl.appendChild(card);
});

